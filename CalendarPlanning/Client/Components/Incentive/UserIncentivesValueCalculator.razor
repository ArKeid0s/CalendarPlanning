@using CalendarPlanning.Shared.Models.DTO;
@inject IIncentiveValuesService IncentiveValuesService

<MudText Typo="Typo.h6" Class="mr-3"><b>@($"Individual Bonus: {IncentiveValuesService.UserIndividualIncentiveValue}€")</b></MudText>
<MudText Typo="Typo.h6">@($"Collective Bonus: {IncentiveValuesService.TotalCollectiveIncentiveValue}€")</MudText>

    @code
    {
    [Parameter]
    public string UserId { get; set; } = null!;

    protected override void OnInitialized()
    {
        IncentiveValuesService.OnValuesUpdated += StateHasChanged;
        IncentiveValuesService.CalculateUserIncentiveValues(UserId);
    }
}
